<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/android:white"
    android:layout_height="match_parent" >
    
    <ImageView
        android:id="@+id/image_user_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/image_holder"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dialog_friend_ok"
        android:layout_marginLeft="@dimen/dialog_friend_ok"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:src="@drawable/paper" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/image_holder"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

    <ImageView
        android:id="@+id/image_rock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:src="@drawable/rock" />

    <ImageView
        android:id="@+id/image_paper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:src="@drawable/paper" />

    <ImageView
        android:id="@+id/image_scissor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:src="@drawable/scissor" />

	</LinearLayout>

</RelativeLayout>